{
  "include": ["src/backend/api"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "outDir": "./api",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
