{
  "include": ["src", "api"],
  "exclude": ["node_modules/*", "firebase/node_modules/*"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@api/*": ["api/*"]
    },
    "types": ["svelte", "node"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
